        <TextBlock HorizontalAlignment="Left" Height="62" Margin="200,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="211" Text="Desktop application for hotel booking&#xD;&#xA;What do you want to access?"/>
        <Button Content="Rooms" HorizontalAlignment="Left" Margin="146,134,0,0" VerticalAlignment="Top" Width="90" Click="RoomButtonClicked" RenderTransformOrigin="0,0.3"/>
        <Button Content="Reservations" HorizontalAlignment="Left" Margin="260,134,0,0" VerticalAlignment="Top" Width="90" Click="ReservationButtonClicked"/>
        <Button Content="Add Tasks" HorizontalAlignment="Left" Margin="369,134,0,0" VerticalAlignment="Top" Width="90" RenderTransformOrigin="-0.04,0.6" Click="TaskButtonClicked"/>

    </Grid>
</Window>
